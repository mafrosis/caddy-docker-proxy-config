nas.mafro.net {
  tls {
    ca https://ca.mafro.net:4433/acme/acme/directory
    ca_root /root/step_ca.crt
  }

  handle_path /rtorrent/* {
    root * /share/rtorrent
    file_server browse
  }

  handle_path /f1/* {
    root * /share/f1
    file_server browse
  }

  handle_path /tv/* {
    root * /share/tv
    file_server browse
  }

  handle_path /x/* {
    root * /share/x
    file_server browse
  }
}
